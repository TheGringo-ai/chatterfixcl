# ChatterFix CMMS Frontend Production Environment
# Phase 1: Point frontend at production API

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_BASE=https://your-staging-api-domain/api
REACT_APP_API_BASE=https://your-staging-api-domain/api

# =============================================================================
# PWA CONFIGURATION
# =============================================================================
VITE_PUSH_PUBLIC_KEY=your_vapid_public_key_here
REACT_APP_PUSH_PUBLIC_KEY=your_vapid_public_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=ChatterFix CMMS
VITE_APP_VERSION=2.0.0
VITE_ENVIRONMENT=production

# =============================================================================
# FEATURES FLAGS
# =============================================================================
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true

# =============================================================================
# SYNC CONFIGURATION
# =============================================================================
VITE_SYNC_INTERVAL=300000
VITE_SYNC_RETRY_ATTEMPTS=3
VITE_SYNC_BATCH_SIZE=50

# =============================================================================
# PERFORMANCE
# =============================================================================
VITE_CACHE_DURATION=300000
VITE_OFFLINE_STORAGE_QUOTA=50MB