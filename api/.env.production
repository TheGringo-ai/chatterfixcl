# ChatterFix CMMS Production Environment Configuration
# Phase 1: Point services at Postgres

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/chatterfix?sslmode=require
POOL_MIN=2
POOL_MAX=15
POOL_TIMEOUT=30

# Database Connection Details (for non-URL configs)
DB_HOST=your-postgres-host
DB_PORT=5432
DB_NAME=chatterfix
DB_USER=chatterfix_app
DB_PASSWORD=your_secure_password
DB_SSL_MODE=require

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=false

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["https://your-frontend-domain.netlify.app", "https://your-custom-domain.com"]

# =============================================================================
# PWA PUSH NOTIFICATIONS
# =============================================================================
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=mailto:your-email@domain.com

# =============================================================================
# CLOUD STORAGE (OPTIONAL)
# =============================================================================
GOOGLE_CLOUD_PROJECT=your-project-id
STORAGE_BUCKET=chatterfix-documents
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=WARNING
PROMETHEUS_METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=/var/backups/chatterfix
BACKUP_RETENTION_DAYS=30
DAILY_BACKUP_HOUR=2

# =============================================================================
# SYNC CONFIGURATION
# =============================================================================
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5