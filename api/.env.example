# ChatterFix CMMS Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatterfix_cmms
DB_USER=chatterfix_app
DB_PASSWORD=your_secure_password_here

# Connection Pool Settings
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=20
DB_MAX_QUERIES=50000
DB_MAX_INACTIVE_TIME=300

# SSL Mode (disable, allow, prefer, require, verify-ca, verify-full)
DB_SSL_MODE=prefer

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_MODEL=llama3.2:1b

# =============================================================================
# CLOUD STORAGE (OPTIONAL)
# =============================================================================

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT=your-project-id
STORAGE_BUCKET=chatterfix-documents
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Metrics and Monitoring
PROMETHEUS_METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# =============================================================================
# PWA AND MOBILE SETTINGS
# =============================================================================

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=mailto:your-email@domain.com

# Offline Sync Settings
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# In production, override these values:
# DB_SSL_MODE=require
# API_DEBUG=false
# LOG_LEVEL=WARNING
# CORS_ORIGINS=["https://your-domain.com"]